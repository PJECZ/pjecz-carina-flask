{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Exhortos √Åreas{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_edit('EXH EXHORTOS') %}
            {{ topbar.button('Exhortos', url_for('exh_exhortos.list_active'), "mdi:email-fast") }}
        {% endif %}
        {% if current_user.can_view('EXH EXHORTOS PARTES') %}
            {{ topbar.button('Partes', url_for('exh_exhortos_partes.list_active'), "mdi:account-multiple") }}
        {% endif %}
        {% if current_user.can_view('EXH EXHORTOS ARCHIVOS') %}
            {{ topbar.button('Archivos', url_for('exh_exhortos_archivos.list_active'), "mdi:file-document-multiple") }}
        {% endif %}
        {% if current_user.can_view('EXH EXTERNOS') %}
            {{ topbar.button('Externos', url_for('exh_externos.list_active'), "mdi:key-variant") }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="exh_areas_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Nombre</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        // DataTable exh_areas
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTExhAreas = constructorDataTable.config();
        configDTExhAreas['ajax']['url'] = '/exh_areas/datatable_json';
        configDTExhAreas['ajax']['data'] = {{ filtros }};
        configDTExhAreas['columns'] = [
            { data: 'detalle' },
            { data: 'nombre' }
        ];
        configDTExhAreas['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.clave + '</a>';
                }
            }
        ];
        // Filtros exh_areas
        const filtrosExhAreas = new FiltrosDataTable('#exh_areas_datatable', configDTExhAreas);
        filtrosExhAreas.precargar();
    </script>
{% endblock %}
