{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Exhortos{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('EXH EXHORTOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('exh_exhortos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('exh_exhortos.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('EXH EXHORTOS') %}
            {{ topbar.button_new('Nuevo Exhorto', url_for('exh_exhortos.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="exh_exhortos_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Creado</th>
                    <th>UUID</th>
                    <th>Estado Origen</th>
                    <th>Juzgado Origen</th>
                    <th>Remitente</th>
                    <th>Estado</th>
                    <th>No. Exp. Origen</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        // DataTable exh_exhortos
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTExhExhortos = constructorDataTable.config();
        configDTExhExhortos['ajax']['url'] = '/exh_exhortos/datatable_json';
        configDTExhExhortos['ajax']['data'] = {{ filtros }};
        configDTExhExhortos['columns'] = [
            { data: 'creado' },
            { data: 'detalle' },
            { data: 'estado_origen' },
            { data: 'juzgado_origen' },
            { data: 'remitente' },
            { data: 'estado' },
            { data: 'numero_expediente_origen' }
        ];
        configDTExhExhortos['columnDefs'] = [
            {
                targets: 1, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.uuid + '</a>';
                }
            },
            {
                targets: 3, // juzgado_origen
                data: null,
                render: function(data, type, row, meta) {
                    return '<span title="' + data.nombre + '">' + data.clave + '</span>';
                }
            },
            {
                targets: 5, // estado
                data: null,
                render: function(data, type, row, meta) {
                    let bgcolor = "bg-dark";
                    switch (data)    {
                        case "RECIBIDO":        bgcolor = 'bg-primary';             break;
                        case "TRANSFIRIENDO":   bgcolor = 'bg-primary';             break;
                        case "PROCESANDO":      bgcolor = 'bg-warning text-dark';   break;
                        case "RECHAZADO":       bgcolor = "bg-danger";              break;
                        case "DEVUELTO":        bgcolor = 'bg-warning text-dark';   break;
                        case "DILIGENCIADO":    bgcolor = "bg-primary";             break;
                        case "CONTESTADO":      bgcolor = "bg-success";             break;
                        case "PENDIENTE":       bgcolor = 'bg-warning text-dark';   break;
                        case "CANCELADO":       bgcolor = "bg-secondary";           break;
                        case "POR ENVIAR":      bgcolor = 'bg-primary';             break;
                        case "INTENTOS AGOTADOS": bgcolor = 'bg-danger';            break;
                        case "RECIBIDO CON EXITO": bgcolor = 'bg-warning text-dark'; break;
                        case "NO FUE RESPONDIDO": bgcolor = 'bg-danger';            break;
                        case "RESPONDIDO":      bgcolor = 'bg-success';             break;
                    }
                    return '<span class="badge rounded-pill ' + bgcolor + '">' + data + '</span>';
                }
            },
        ];
        // Filtros exh_exhortos
        const filtrosExhExhortos = new FiltrosDataTable('#exh_exhortos_datatable', configDTExhExhortos);
        filtrosExhExhortos.precargar();
    </script>
{% endblock %}
