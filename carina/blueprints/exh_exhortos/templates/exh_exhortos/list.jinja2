{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Exhortos{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('EXH AREAS') %}
            {{ topbar.button('√Åreas', url_for('exh_areas.list_active'), "mdi:office-building-marker") }}
        {% endif %}
        {% if current_user.can_view('EXH EXHORTOS PARTES') %}
            {{ topbar.button('Partes', url_for('exh_exhortos_partes.list_active'), "mdi:account-multiple") }}
        {% endif %}
        {% if current_user.can_view('EXH EXHORTOS ARCHIVOS') %}
            {{ topbar.button('Archivos', url_for('exh_exhortos_archivos.list_active'), "mdi:file-document-multiple") }}
        {% endif %}
        {% if current_user.can_view('EXH EXTERNOS') %}
            {{ topbar.button('Externos', url_for('exh_externos.list_active'), "mdi:key-variant") }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="exh_exhortos_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>UUID</th>
                    <th>Juzgado Origen ID</th>
                    <th>Juzgado Origen Nombre</th>
                    <th>No. Expediente Origen</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script src="/static/js/datatables-constructor.js"></script>
    <script src="/static/js/datatables-filtros.js"></script>
    <script>
        // DataTable exh_exhortos
        const constructorDataTable = new ConfigDataTable( '{{ csrf_token() }}' );
        let configDTExhExhortos = constructorDataTable.config();
        configDTExhExhortos['ajax']['url'] = '/exh_exhortos/datatable_json';
        configDTExhExhortos['ajax']['data'] = {{ filtros }};
        configDTExhExhortos['columns'] = [
            { data: 'detalle' },
            { data: 'juzgado_origen' },
            { data: 'juzgado_nombre' },
            { data: 'numero_expediente_origen' }
        ];
        configDTExhExhortos['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.uuid + '</a>';
                }
            }
        ];
        // Filtros exh_exhortos
        const filtrosExhExhortos = new FiltrosDataTable('#exh_exhortos_datatable', configDTExhExhortos);
        filtrosExhExhortos.precargar();
    </script>
{% endblock %}
